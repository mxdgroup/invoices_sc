[Unit]
Description=Invoice Generator API (Proforma & Tax Invoices)
After=network.target

[Service]
Type=notify
User=root
Group=root
WorkingDirectory=/var/invoice/invoices_sc
Environment="PATH=/var/invoice/invoices_sc/venv/bin"
EnvironmentFile=/var/invoice/invoices_sc/.env
ExecStart=/var/invoice/invoices_sc/venv/bin/uvicorn main:app --host 0.0.0.0 --port 8000 --workers 2
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target

